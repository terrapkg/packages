+	check_encode("$", 1, "", "%24");
+	check_encode("Â¢", 2, "", "%C2%A2");
+	check_encode("â‚¬", 3, "", "%E2%82%AC");
+	check_encode("ðˆ", 4, "", "%F0%90%8D%88");
+
+	/* CK_UTF8CHAR is unsigned char (1 byte) */
+	/* labels SHOULD be normalized to NFC [UAX15] */
+
